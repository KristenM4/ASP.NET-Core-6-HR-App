@model Employee
@{
    ViewBag.Title = "Employee Details";
}
@section Scripts {
    <script src="~/js/DeletionPopup.js" type="text/javascript"></script>
}

<div class="container col-md-8 mx-auto">
    <h1 class="display-4 my-4 text-center">Employee Details</h1>
    <a asp-action="EditEmployee" asp-controller="App" asp-route-id="@Model.EmployeeId" class="link link-primary">
        Edit
    </a>

    <div class="border border-secondary rounded pt-2">
        <div class="row">

            <div class="col-4">
                <p>Full Name:</p>
                <p>Position</p>
                <p>Location:</p>
                <p>Date of Birth:</p>
                <p>Phone:</p>
                <p>Email:</p>
            </div>

            <div class="col-8">
                <p>@Model.FirstName @Model.MiddleName @Model.LastName</p>
                <p>@Model.Position</p>
                <p>@Model.Location.LocationName</p>
                <p>@Model.DateOfBirth.ToShortDateString()</p>
                <p>@Model.Phone</p>
                <p>@Model.Email</p>
            </div>

        </div>
    </div>

    <div id="delete-toggle" class="text-danger mt-2">Delete Employee</div>
    <div class="SW-delete-data">
        <p>Are you sure you want to delete this employee? This action will <b>permanantly</b> remove this employee's data from the database.</p>
        <a asp-action="DeleteEmployee" asp-controller="App" asp-route-id="@Model.EmployeeId" class="btn btn-danger">
            Delete Employee
        </a>
    </div>
</div>