@model LocationListViewModel
@{
    ViewBag.Title = "Locations";
}
@section Scripts {
    <script src="~/js/SearchLocation.js" type="text/javascript"></script>
}

<div class="text-center">

    <div class="col-md-10 mx-auto d-flex mb-2">
        <div class="w-50">
            <h2 class="display-5 my-2">
                <a class="link-dark text-decoration-none" asp-controller="App" asp-action="LocationList">All Locations</a>
            </h2>
            <a asp-action="AddLocation" asp-controller="App" class="text-decoration-none">Add New Location</a>
        </div>
        <div class="w-50 mt-4">
            <input id="txtLocationName" type="text" placeholder="Search a location" />
            <button id="searchButton" class="btn btn-secondary">Search</button>
        </div>
    </div>

    <div class="col-md-10 col-xl-8 mx-auto">
        <table class="table table-hover">
            <caption>All Locations</caption>

            <thead>
                <tr class="border-bottom fs-5">
                    <td class="col-4 SW-table-header">
                        <p id="nameSort" class="user-select-none">Name</p>
                    </td>
                    <td class="col-4 SW-table-header">
                        <p id="citySort" class="user-select-none">City</p>
                    </td>
                    <td class="col-4 SW-table-header">
                        <p id="phoneSort" class="user-select-none">Phone No.</p>
                    </td>
                </tr>
            </thead>

            <tbody>
                @foreach (var location in Model.Locations)
                {
                    <tr class="border-bottom">
                        <td class="col-4">
                            <a class ="link-dark text-decoration-none" asp-controller="App" asp-action="LocationDetails" asp-route-id="@location.LocationId">
                                <p>@location.LocationName</p>
                            </a>
                        </td>
                        <td class="col-4">
                            <p>@location.City</p>
                        </td>
                        <td class="col-4">
                            <p>@location.Phone</p>
                        </td>
                    </tr>
                }
            </tbody>
        </table>
    </div>
</div>