@model AddEmployeeViewModel
@{
    ViewBag.Title = "Add an Employee";
}
<div>
    <h5 class="display-5">Add a New Employee</h5>

    <form method="POST">
        <div class="form-group">
            <label asp-for="FirstName">First Name</label>
            <input asp-for="FirstName" class="form-control" type="text" />
            <span asp-asp-validation-for="FirstName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="LastName">Last Name</label>
            <input asp-for="LastName" class="form-control" type="text" />
            <span asp-asp-validation-for="LastName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="MiddleName">Middle Name (optional)</label>
            <input asp-for="MiddleName" class="form-control" type="text" />
            <span asp-asp-validation-for="MiddleName" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="DateOfBirth">Date of Birth</label>
            <input asp-for="DateOfBirth" class="form-control" type="datetime" />
            <span asp-asp-validation-for="DateOfBirth" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Email">Email Address</label>
            <input asp-for="Email" class="form-control" type="email" />
            <span asp-asp-validation-for="Email" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Phone">Phone Number</label>
            <input asp-for="Phone" class="form-control" type="text" />
            <span asp-asp-validation-for="Phone" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Position">Position</label>
            <input asp-for="Position" class="form-control" type="text" />
            <span asp-asp-validation-for="Position" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Location">Location</label>
            <select asp-for="Location" class="form-control">
                @foreach (var location in ViewBag.AllLocations)
                {
                    <option value="@location.LocationName">@location.LocationName</option>
                }
            </select>
            <span asp-asp-validation-for="Location" class="text-danger"></span>
        </div>

        <div class="form-group">
            <button type="submit" class="btn btn-primary">Submit</button>
        </div>
    </form>
</div>
